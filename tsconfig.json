{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./build",
    "incremental": false,
    "strict": false,
    "esModuleInterop": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [".eslintrc.js", "./src/**/*.ts", "**/*.cjs", "**/*.mjs"],
  "exclude": ["node_modules", "dist", "test"],
  "types": ["@types/jest"]
}
