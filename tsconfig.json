{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./build",
    "incremental": false,
    "strict": false,
    "esModuleInterop": true,
    "noEmit": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [".eslintrc.js", "./src/**/*.ts", "**/*.cjs", "**/*.mjs"],
  "exclude": ["node_modules", "build", "test"],
  "types": ["@types/jest"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
